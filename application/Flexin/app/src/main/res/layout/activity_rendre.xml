<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="@dimen/little_padding"
    tools:context="com.crystal.flexin.activity.RendreActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/rendreEtatLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_weight="0.5"
            android:text="@string/etatRendreLabel" />

        <EditText
            android:id="@+id/rendreEtatEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="textCapSentences" />

    </LinearLayout>

    <Button
        android:id="@+id/rendreEtatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rendreEtatLabel"
        android:layout_alignStart="@+id/rendreEtatLabel"
        android:layout_below="@+id/rendreEtatEditText"
        android:layout_marginTop="25dp"
        android:text="@string/rendre" />

</LinearLayout>
